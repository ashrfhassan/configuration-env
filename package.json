  "bugs": {
    "url": "https://github.com/ashrfhassan/configuration/issues"
  },
  "homepage": "https://github.com/ashrfhassan/configuration#readme",
  "devDependencies": {
    "@types/jest": "^25.1.3",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.1",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.2"
  }
